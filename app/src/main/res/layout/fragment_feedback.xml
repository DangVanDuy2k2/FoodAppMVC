<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/define_dimen_16"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="@string/feedback_comment"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edt_feed_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/define_dimen_150"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:background="@drawable/bg_shape_white_conner_red_6"
        android:gravity="start"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:maxLength="1000"
        android:padding="@dimen/define_dimen_12"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/txt_send_feedback"
        android:layout_width="@dimen/define_dimen_200"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_shape_red_conner_6"
        android:gravity="center"
        android:padding="@dimen/define_dimen_12"
        android:text="@string/send_feedback"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>